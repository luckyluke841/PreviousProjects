<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_nutrition"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cyfitpackage.cyfit.activity.AddNutritionActivity">

    <TextView
        android:text="@string/add_nutrition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:id="@+id/AddNutritionTitle"
        android:textSize="28sp"
        android:textAlignment="center"
        android:textStyle="normal|bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/AddNutritionType"
        android:hint="Enter Nutrition Type"
        android:layout_below="@+id/AddNutritionTitle"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/AddNutritionCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/AddNutritionType"
        android:layout_alignStart="@+id/AddNutritionType"
        android:layout_below="@+id/AddNutritionType"
        android:ems="10"
        android:hint="Enter nutrition calories"
        android:inputType="text" />

    <EditText
        android:id="@+id/AddNutritionDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/AddNutritionType"
        android:layout_alignStart="@+id/AddNutritionType"
        android:layout_below="@+id/AddNutritionCalories"
        android:ems="10"
        android:hint="Enter description"
        android:inputType="text" />
    <Button
        android:text="Add Nutrition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AddNutritionButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/AddNutritionButton"
        android:layout_toEndOf="@+id/AddNutritionButton"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="31dp"
        android:id="@+id/NutritionSuccessIndicator"
        android:textSize="18sp" />
</RelativeLayout>
