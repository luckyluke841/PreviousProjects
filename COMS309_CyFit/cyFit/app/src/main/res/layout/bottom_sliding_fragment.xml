<?xml version="1.0" encoding="utf-8"?>
<cyfitpackage.cyfit.other.SlidingRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_Bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="false"
    android:background="#7c7c7c">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/bbSongNameButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Song Name" />

        <SeekBar
            android:id="@+id/bbSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/bbREW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.08"
                app:srcCompat="@android:drawable/ic_media_rew" />

            <ImageButton
                android:id="@+id/bbPlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.08"
                app:srcCompat="@android:drawable/ic_media_play" />

            <ImageButton
                android:id="@+id/bbFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.08"
                app:srcCompat="@android:drawable/ic_media_ff" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/bbRV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</cyfitpackage.cyfit.other.SlidingRelativeLayout>