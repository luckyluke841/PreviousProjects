<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cyfitpackage.cyfit.fragment.FriendCheckFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/potential_friend_email"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/potential_friend_full_name"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/potential_friend_email"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_below="@id/potential_friend_full_name"
        android:id="@+id/cancel_friend_button"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:layout_toRightOf="@id/cancel_friend_button"
        android:layout_below="@id/potential_friend_full_name"
        android:id="@+id/send_friend_button_fragment"/>


</RelativeLayout>
