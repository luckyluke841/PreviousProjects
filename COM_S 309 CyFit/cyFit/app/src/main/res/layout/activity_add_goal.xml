<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_goal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cyfitpackage.cyfit.activity.AddGoalActivity">

    <TextView
        android:text="@string/add_goal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:id="@+id/AddGoalTitle"
        android:textSize="28sp"
        android:textAlignment="center"
        android:textStyle="normal|bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/AddGoalName"
        android:hint="Enter Goal Name"
        android:layout_below="@+id/AddGoalTitle"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/AddGoalDescription"
        android:hint="Enter Goal Description"
        android:layout_below="@+id/AddGoalName"
        android:layout_alignLeft="@+id/AddGoalName"
        android:layout_alignStart="@+id/AddGoalName" />

    <Button
        android:text="Add Goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AddGoalButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/AddGoalButton"
        android:layout_toEndOf="@+id/AddGoalButton"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="31dp"
        android:id="@+id/GoalSuccessIndicator"
        android:textSize="18sp" />
</RelativeLayout>
